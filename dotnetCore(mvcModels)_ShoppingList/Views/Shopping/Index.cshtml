@model IEnumerable<dotnetCore_mvcModels__ShoppingList.Entities.ShopItem>
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Item)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="glyphicon glyphicon-pencil"></a>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="glyphicon glyphicon-trash"></a>
                </td>
            </tr>
        }
    </tbody>
</table>

